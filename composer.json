{
  "require": {
    "php": "^7.1.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^8",
    "mockery/mockery": "0.9.*",
    "hamcrest/hamcrest-php": "~1.2"
  },
  "autoload": {
    "classmap": [
      "src/"
    ],
    "psr-4": {"App\\": "src"}
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "phpunit tests/*.php"
    ],
    "start": [
      "php -S localhost:8000 -t ./public"
    ]
  }
}
